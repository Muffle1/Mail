<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Mail_.Resources">
  <!-- Стиль ScrollViewer с html содержимым письма в MainWindow.xaml-->
  <Style x:Key="ScrollViewerHTMLStyle" TargetType="{x:Type ScrollViewer}">
    <Setter Property="CanContentScroll" Value="True"/>
    <Setter Property="Margin" Value="10, 30, 0, 10"/>
    <Setter Property="Height" Value="400"/>
  </Style>
  <!---->
</ResourceDictionary>