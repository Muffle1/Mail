<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Mail_.Resources">
  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="ColorDictionary.xaml" />
  </ResourceDictionary.MergedDictionaries>

  <!-- Стиль RichTextBox для ввода тела сообщения в SendMessageWindow.xaml-->
  <Style x:Key="RichTextBoxBodyStyle" TargetType="{x:Type RichTextBox}">
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="VerticalAlignment" Value="Stretch"/>
    <Setter Property="Margin" Value="20"/>
    <Setter Property="FontSize" Value="20"/>
    <Setter Property="BorderBrush" Value="{StaticResource Gray}"/>
    <Setter Property="BorderThickness" Value="2"/>
  </Style>
  <!---->
</ResourceDictionary>